#!/bin/bash

set -euo pipefail

if [[ ! -d "$HOME/kcov" ]]; then
    git clone https://github.com/SimonKagstrom/kcov
    cd kcov || exit 1
    mkdir build
    cd build || exit 1
    cmake -DCMAKE_INSTALL_PREFIX:PATH="$HOME/kcov" ..
    make
    make install
fi

echo "Install D-Bus libraries."

sudo apt-get install -y libdbus-glib-1-dev

exit
